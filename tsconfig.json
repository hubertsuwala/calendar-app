{
  "compilerOptions": {
    "checkJs":true,
    "baseUrl": ".",
    "paths": {
      "@features": ["src/features/index"]
    },
    "jsx": "react",
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "types": ["node"]
  }
}
