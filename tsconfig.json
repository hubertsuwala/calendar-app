{
  "compilerOptions": {
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@features": ["src/features/index"]
    },
    "jsx": "react",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "types": ["node"]
  }
}
